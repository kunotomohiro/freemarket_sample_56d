.header
  .header-wrapper
    .header-logo
      %a{href: "#"}
        = image_tag 'logo.png', width: '133', alt: 'アイコン'
    .header-search
      .header-search_input
        %input.search-register{type: "text", name: "name", placeholder: "何かお探しですか？", autocomplete: "off", style: "font-size:100%;"}
      .header-search_icon
        %a{href: "#"}
          = fa_icon 'search', class: 'icon'
  .header-select
    .header-select_category
      %a{href: "#"}
        = fa_icon 'list', class: "awsome"
        カテゴリーから探す
    .header-select_category
      %a{href: "#"}
        = fa_icon 'tag', class: "awsome"
        ブランドから探す
    .header-btn
      .header-btn_signupbtn
        = link_to "新規会員登録"
      .header-btn_logbtn
        = link_to "ログイン"
