.user-main__contents__form.single-panel
  = form_with url:users_sign_up_payment_path, method: :get,local: true do |f|
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item
        お名前
      %span.user-main__contents__form__group__item--required
        必須
      = f.text_field :lastname, class:'user-main__contents__form__group__item__input', placeholder:'例) 山田', required: true, autofocus: true;
      = f.text_field :firstname, class:'user-main__contents__form__group__item__input', placeholder:'例) 彩', required: true
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item
        お名前カナ 
      %span.user-main__contents__form__group__item--required
        必須
      = f.text_field :lastname_kana, class:'user-main__contents__form__group__item__input', placeholder:'例) ヤマダ', required: true
      = f.text_field :firstname_kana, class:'user-main__contents__form__group__item__input', placeholder:'例) アヤ', required: true
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item{for:"postal_code"}
        郵便番号
      %span.user-main__contents__form__group__item--required
        必須
      = f.number_field :postal_code, class:'user-main__contents__form__group__item__input', placeholder:'例) 123-4567', required: true
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item{for:"prefecture_id"}
        都道府県
      %span.user-main__contents__form__group__item--required
        必須
      %br
      = f.collection_select :prefecture_id, Prefecture.all, :id, :name,{prompt: "--"}, {class: "prefecture_id"}
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item
        市区町村
      %span.user-main__contents__form__group__item--required
        必須
      = f.text_field :city, class:'user-main__contents__form__group__item__input', placeholder:'例) 横浜市緑区', required: true
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item
        番地
      %span.user-main__contents__form__group__item--required
        必須
      = f.text_field :address_number, class:'user-main__contents__form__group__item__input', placeholder:'例) 青山1-1-1', required: true
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item
        建物名
      %span.user-main__contents__form__group__item--optional
        任意
      = f.text_field :building_name, class:'user-main__contents__form__group__item__input', placeholder:'例) 柳ビル103'
    .user-main__contents__form__group
      %label.user-main__contents__form__group__item{for:"tel"}
        携帯電話の番号
      %span.user-main__contents__form__group__item--optional
        任意
      = f.telephone_field :tel, class:'user-main__contents__form__group__item__input', placeholder:'例) 09012345678'
    .user-main__contents__form__group
      = f.submit '次へ進む', class:'user-main__contents__form__group__btn--default'